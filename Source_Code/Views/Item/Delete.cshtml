@model E_commerce.ViewModels.ItemVM.DeleteItemVM

@{
    //ViewData["Title"] = "Delete";
    var list = ViewBag.items;
}

@*<h1>Delete</h1>*@

<form method="post" asp-action="Delete">
    <div class="container card border-primary mt-4" style="width:500px">
        <div class="row justify-content-center text-center">
               <h1 class="display-4"> <h2> Delete an item </h2></h1>
        </div>       
        <div class="row justify-content-center text-center">
                <b class="mt-3"> Name</b> 
        </div>
                @*<input class="mb-3 mt-2 col-5"/>*@

                
                <div class="form-group">
                    <div class="row justify-content-center text-center">
                
                        <label class="control-label">Choose Item:</label>
                    </div>
                    <div class="row justify-content-center text-center">
                
                        <select asp-for="Id" class="form-control" >

                            <option selected disabled hidden></option>
                        @foreach (var c in list)
                        {
                            <option  value="@c.Id"> @c.Name</option>
                        }


                        </select>
                    </div>
                @*<span asp-validation-for ="ITEM" class="text-danger"></span>*@
            </div>

                @*<b > Count</b> 
                <input class="mb-3 mt-2  col-5 "/>
                
                <b > Category </b> 
                <input class ="mb-3 mt-2 col-5" />
                
                <b > Description </b> 
                <textarea class ="mb-3 mt-2 col-5"> </textarea>
               *@ 
                
               <div class="form-group text-center ">
                    <input type="submit" value="Delete" class="btn btn-primary mb-1" onclick="return confirm('Are you sure you want to delete ?')" />
             </div>
        
        
         
    </div>
</form>

