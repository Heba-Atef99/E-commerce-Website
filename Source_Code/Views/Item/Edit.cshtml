@model ITEM
@*var Item= viewbag.Item;*@
@{
    ViewData["Title"] = "Edit";
}

@*<h1>Edit</h1>*@

<form asp-action="Edit" method="post">
    <div class="container card border-primary mt-4" style="width:500px">
        
            <div class="row justify-content-center">
                <h1 class="display-4 "> <h2> Edit an item </h2></h1>
                <br >
             </div>   
                
                <div class="row justify-content-center text-center">
                    <b class="mt-3"> Name</b> 
                </div>

                <div class="row justify-content-center">
                    <input class="mb-3 mt-2 col-5" asp-for ="Name" value="@Model.Name"/>
                </div>
                
                
                <div class="row justify-content-center text-center">
                    <b> Category:</b>
                </div>

                <div class="row justify-content-center">
                    <input class="mb-3 mt-2 col-5" asp-for ="Type" value="@Model.Type"/>
                </div>
                
                <div class="row justify-content-center text-center">
                    <b> Original Count:</b> 
                </div>

                <div class="row justify-content-center">
                    <input class="mb-3 mt-2 col-5"  asp-for ="Original_Count" value="@Model.Original_Count"/>
                </div>
                <div class="row justify-content-center text-center">
                    <b> Description:</b> 
                </div>

                <div class="row justify-content-center">
                    <textarea class="mb-3 mt-2 col-5"  asp-for ="Description" value="@Model.Description"> </textarea>
                </div>

                <div class="row justify-content-center text-center">
                    <b> Price: </b> 
                </div>

                <div class="row justify-content-center">
                    <input class="mb-3 mt-2 col-5"  asp-for ="Price" value="@Model.Price"/>
                </div>
                <div class="row justify-content-center text-center">
                    <b> Date: </b> 
                </div>

                <div class="row justify-content-center">
                    <input class="mb-3 mt-2 col-5"  asp-for ="Date" value="@Model.Date"/>
                </div>
                <div class="row justify-content-center text-center">
                    <b> Image: </b> 
                </div>

                <div class="row justify-content-center">
                    <input class="mb-3 mt-2 col-5"  asp-for ="Image" value="@Model.Image"/>
                </div>
        
            <div class="form-group text-center">
                <p>If you want to save any changes to your items click on save changes</p>
                
                <input type="submit" value="Save changes" class="btn btn-primary mb-1" onclick="return confirm('Are you sure you want to edit this item?')" />
            </div>
       

    </div>
</form>




