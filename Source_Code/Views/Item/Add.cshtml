@model ITEM
@{
    ViewData["Title"] = "Add";
}

<form method="post" asp-action="Add">
    <div class="container card border-primary mt-4" style="width:500px">
        <div class="row justify-content-center text-center">
               <h1 class="display-4"> <h2> Add new item </h2></h1>
        </div> 
        <div class="row justify-content-center text-center">
                <b class="mt-3"> Name</b> 
        </div>
        <div class="row justify-content-center text-center">
                <input asp-for="Name" class="mb-3 mt-2 col-5" />
         </div>
                <div class="row justify-content-center text-center">
                <b > Category </b> 
        </div>
        <div class="row justify-content-center text-center">
                <input asp-for="Type" class ="mb-3 mt-2 col-5" />
               @*<span asp-validation-for="Type" class="text-danger"></span>*@
        </div>

         <div class="row justify-content-center text-center">
                <b >Available Count</b> 
        </div>
        <div class="row justify-content-center text-center">
                <input asp-for="Available_Count" class="mb-3 mt-2  col-5 "/>
        </div>

         <div class="row justify-content-center text-center">
                <b > Original Count </b> 
        </div>
        <div class="row justify-content-center text-center">
                <input asp-for="Original_Count" class="mb-3 mt-2  col-5 "/>
        </div>

        <div class="row justify-content-center text-center">
                <b class="mt-3"> Price</b> 
        </div>
        <div class="row justify-content-center text-center">
                <input asp-for="Price" class="mb-3 mt-2 col-5" />
         </div>

        <div class="row justify-content-center text-center">
                <b class="mt-3"> Date </b> 
        </div>
        <div class="row justify-content-center text-center">
                <input asp-for="Date" class="mb-3 mt-2 col-5" />
         </div>
        
        <div class="row justify-content-center text-center">
                <b > Description </b> 
        </div>
        <div class="row justify-content-center text-center">
                <textarea asp-for="Description" class ="mb-3 mt-2 col-5"> </textarea>
        </div>

        <div class="row justify-content-center text-center">
                <b > Image </b> 
        </div>
        <div class="row justify-content-center text-center">
                <textarea asp-for="Image" class ="mb-3 mt-2 col-5"> </textarea>
        </div>

                <div class="form-group text-center ">
                    <input type="submit" value="Add" class="btn btn-primary mb-1" onclick="return confirm('Are you sure you want to add this item?')" />
             </div>
        
        
         
    </div>
</form>

