@model IEnumerable<ITEM>
@{
    ViewData["Title"] = "Inventory";
}

@*<h1>Inventory</h1>*@
<div class=container>
    <h1 class= "text-primary"> My Iventory List </h1>
    <div class="row justify-content-center text-center">
        <h5> Your proposed items for sale... </h5>
        <div>
            <table class= "table table-bordered table-stripped mt-2" style="margin-right:auto;margin-left:auto">
                <thead>
                    <tr>
                        <th> 
                            Name
                        </th>
                        <th>
                            Category
                        </th>
                        <th>
                            Available Count
                        </th>
                        <th>
                            Original Count
                        </th>
                        <th>
                            Image
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Price
                        </th>
                        <th>
                            Date
                        </th>
                        </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.Type
                            </td>
                            <td>
                                @item.Available_Count
                            </td>
                            <td>
                                @item.Original_Count
                            </td>
                            <td>
                                @item.Image
                            </td>
                            <td>
                                @item.Description
                            </td>
                            <td>
                                @item.Price
                            </td>
                            <td>
                                @item.Date
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        
        </div>
    </div>
    <br />
    <div class="row ">
        <div class="col-3" style="margin-left: 18%">
            <a asp-controller="Item" asp-action ="Add" class="btn btn-primary" >
                Add Item
            </a>
        </div>
        <div class="col-3">
            <a asp-controller="Item" asp-action ="Edit" class="btn btn-primary">
                Edit Item
            </a>
        </div>
        <div class="col-3">
            <a asp-controller="Item" asp-action ="Delete" class="btn btn-primary float-right ">
                Delete Item
            </a>
        </div>

    </div>

</div>




