@{
}

<form method="get">
    <div class="m-auto" style="width:fit-content">
        <div class="row justify-content-center mt-5 mb-5">
            <span class="badge badge-info p-3 display-2" style="font-size:1rem;">
                Current Balance: <span class="badge badge-light">4 $</span>
            </span>
        </div>

        <div class="row justify-content-center mb-5">
            <button name="btn" class="btn btn-success" value="sold" type="submit" asp-action="Dashboard">Sold Items</button>
        </div>

        <div class="row justify-content-center mb-5">
            <button name="btn" class="btn btn-secondary" value="unsold" type="submit" asp-action="Dashboard">Unsold Items</button>
        </div>

        <div class="row justify-content-center">
            <button name="btn" class="btn btn-warning" value="purchased" type="submit" asp-action="Dashboard">Purchased Items</button>
        </div>
    </div>
</form>